<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Margin="10,10,10,10" Name="fileUpdatedLabel" Content="Latest File Update on Desktop"></Label>
            <TextBlock Margin="10,10,10,10" Name="fileUpdatedTextBlock" Text="" Foreground="Blue" ></TextBlock>
            <Image Margin="10,10,10,10" Name="fileUpdatedImage" Width="300" Height="300"></Image>
        </StackPanel>

    </Grid>
</Window>
