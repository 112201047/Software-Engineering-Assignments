<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Margin="10,10,10,10" Name="fileUpdatedLabel" Content="Latest File Update on Desktop"></Label>
            <TextBlock Margin="10,10,10,10" Text="{Binding LatestFileUpdateText}" Foreground="Blue" />
            <Image Margin="10,10,10,10" Source="{Binding LatestFileUpdateImage}" Width="200" Height="200" />
        </StackPanel>

    </Grid>
</Window>
